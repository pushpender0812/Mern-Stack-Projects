<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Approved Orders</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <main id="main" class="main">
        <div class="container mt-4">
            <div class="row">
                <div class="col">
                    <div class="pagetitle">
                        <h1>Approved  Orders</h1>
                        <nav>
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item">Orders</li>
                                <li class="breadcrumb-item active">Approved Orders</li>
                            </ol>
                        </nav>
                    </div>
                    <!-- End Page Title -->

                    <section class="section">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">Approved Orders List</h5>

                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>#</th>
                                                <th>Order ID</th>
                                                <th>User Name</th>
                                                <th>User Email</th>
                                                <th>Phone</th>
                                                <th>Product Name</th>
                                                <th>Quantity</th>
                                                <th>Total Price</th>
                                                <th>Coupon Used</th>
                                                <th>Order Status</th>
                                                <!-- <th>Action</th> -->
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (orders && orders.length > 0) { %>
                                                <% orders.forEach((order, index) => { %>
                                                    <% order.product_id.forEach((product, pIndex) => { %>
                                                        <tr>
                                                            <% if (pIndex === 0) { %>
                                                                <td rowspan="<%= order.product_id.length %>"><%= index + 1 %></td>
                                                                <td rowspan="<%= order.product_id.length %>"><%= order.razorpay_order_id %></td>
                                                                <td rowspan="<%= order.product_id.length %>"><%= order.user_id.name %></td>
                                                                <td rowspan="<%= order.product_id.length %>"><%= order.user_id.email %></td>
                                                                <td rowspan="<%= order.product_id.length %>"><%= order.user_id.phone %></td>
                                                            <% } %>
                                                            <td><%= product.product_name %></td>
                                                            <td><%= order.total_quantity[pIndex].quantity %></td>
                                                           
                                                            <% if (pIndex === 0) { %>
                                                                <td rowspan="<%= order.product_id.length %>"><%= order.total_price %></td>
                                                                <td rowspan="<%= order.product_id.length %>"><%= order.coupon_id ? order.coupon_id.coupon_name : 'N/A' %></td>
                                                                <td rowspan="<%= order.product_id.length %>"><%= order.order_status %></td>
                                                                <td rowspan="<%= order.product_id.length %>">
                                                                    <!-- <form action="/admin/user/orders/approve/   " method="POST">
                                                                        <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                                                    </form>
                                                                    <form action="/admin/user/orders/reject/ " method="POST">
                                                                        <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                                                    </form> -->
                                                                </td>
                                                            <% } %>
                                                        </tr>
                                                    <% }) %>
                                                <% }) %>
                                            <% } else { %>
                                                <tr>
                                                    <td colspan="11" class="text-center">No Approved orders found</td>
                                                </tr>
                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </main>
    <!-- End #main -->

    <!-- Bootstrap JS and dependencies -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
</body>
</html>
