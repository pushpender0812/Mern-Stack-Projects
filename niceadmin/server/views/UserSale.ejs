<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <% if (data) { %>
       
    
        <section class="section" style="margin-left: 310px; margin-top: 90px;">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Approved Orders List</h5>

                    <div class="table-responsive">
                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Order ID</th>
                                    <th>User Name</th>
                                    <th>User Email</th>
                                    <th>Phone</th>
                                    <th>Product Name</th>
                                    <th>Quantity</th>
                                    <th>Total Price</th>
                                    <th>Coupon Used</th>
                                    <th>Order Status</th>
                                    <!-- <th>Action</th> -->
                                </tr>
                            </thead>
                            <tbody>
                                <% if (data && data.length > 0) { %>
                                    <% data.forEach((order, index) => { %>
                                        <% order.product_id.forEach((product, pIndex) => { %>
                                            <tr>
                                                <% if (pIndex === 0) { %>
                                                    <td rowspan="<%= order.product_id.length %>"><%= index + 1 %></td>
                                                    <td rowspan="<%= order.product_id.length %>"><%= order.razorpay_order_id %></td>
                                                    <td rowspan="<%= order.product_id.length %>"><%= order.user_id.name %></td>
                                                    <td rowspan="<%= order.product_id.length %>"><%= order.user_id.email %></td>
                                                    <td rowspan="<%= order.product_id.length %>"><%= order.user_id.phone %></td>
                                                <% } %>
                                                <td><%= product.product_name %></td>
                                                <td><%= order.total_quantity[pIndex].quantity %></td>
                                               
                                                <% if (pIndex === 0) { %>
                                                    <td rowspan="<%= order.product_id.length %>"><%= order.total_price %></td>
                                                    <td rowspan="<%= order.product_id.length %>"><%= order.coupon_id ? order.coupon_id.coupon_name : 'N/A' %></td>
                                                    <td rowspan="<%= order.product_id.length %>"><%= order.order_status %></td>
                                                    <td rowspan="<%= order.product_id.length %>">
                                                        <!-- <form action="/admin/user/orders/approve/   " method="POST">
                                                            <button type="submit" class="btn btn-success btn-sm">Approve</button>
                                                        </form>
                                                        <form action="/admin/user/orders/reject/ " method="POST">
                                                            <button type="submit" class="btn btn-danger btn-sm">Reject</button>
                                                        </form> -->
                                                    </td>
                                                <% } %>
                                            </tr>
                                        <% }) %>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="11" class="text-center">No Approved orders found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </section>
  
  
  
        <% } %>

    <% if (!data) { %>
     <h1 style="margin: 350px;"> Not Any Approved Order By User</h1>
    <% } %>
   
</body>
</html>