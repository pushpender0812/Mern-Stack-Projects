<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <main id="main" class="main">
        <div class="pagetitle">
          <h1>View Coupons</h1>
          <nav>
            <ol class="breadcrumb">
              <li class="breadcrumb-item"><a href="index.html">Home</a></li>
              <li class="breadcrumb-item">Coupons</li>
              <li class="breadcrumb-item active">View Coupons</li>
            </ol>
          </nav>
        </div>
        <!-- End Page Title -->
      
        <section class="section">
          <div class="row">
            <div class="col-lg-12">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Coupons List</h5>
      
                  <div class="table-responsive">
                    <table class="table table-bordered">
                      <thead>
                        <tr>
                          <th>#</th>
                          <th>Coupon Name</th>
                          <th>Coupon Value</th>
                          <th>Expire Date</th>
                          <th>Coupon Type</th>
                          <th>Maximum Discount</th>
                          <th>Minimum Cart Value</th>
                          <th>Actions</th>
                        </tr>
                      </thead>
                      <tbody>
                        <% if (coupons && coupons.length > 0) { %>
                          <% coupons.forEach((coupon, index) => { %>
                            <tr>
                              <td><%= index + 1 %></td>
                              <td><%= coupon.coupon_name %></td>
                              <td><%= coupon.coupon_value %></td>
                              <td><%= coupon.expire_date %></td>
                              <td><%= coupon.coupon_type %></td>
                              <td><%= coupon.maximum_discount %></td>
                              <td><%= coupon.min_cart %></td>
                              <td>
                                <a href="/admin/user/coupon/edit-coupon/<%= coupon._id %>" class="btn btn-sm btn-warning">Edit</a>
                                <a href="/admin/user/coupon/delete-coupon/<%= coupon._id %>" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this coupon?');">Delete</a>
                              </td>
                            </tr>
                          <% }) %>
                        <% } else { %>
                          <tr>
                            <td colspan="7" class="text-center">No coupons found</td>
                          </tr>
                        <% } %>
                      </tbody>
                    </table>
                  </div>
      
                </div>
              </div>
            </div>
          </div>
        </section>
      </main>
      <!-- End #main -->
      
</body>
</html>